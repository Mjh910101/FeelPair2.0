<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/peopleItem_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitle"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/peopleItem_messageLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/peopleItem_peopleId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="参加者"
                android:textColor="@color/text_gray_02"
                android:textSize="14dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/line_gray" />

            <TextView
                android:id="@+id/peopleItem_chooesId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="心动号码"
                android:textColor="@color/text_gray_02"
                android:textSize="14dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/line_gray" />

            <TextView
                android:id="@+id/peopleItem_sumText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="总选择人数"
                android:textColor="@color/text_gray_02"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/peopleItem_btnLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/peopleItem_statisticalBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="匹配"
                android:textColor="@color/whitle"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/peopleItem_deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="删除"
                android:textColor="@color/whitle"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>


</HorizontalScrollView>